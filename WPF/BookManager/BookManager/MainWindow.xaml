<Window x:Class="BookManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Book">
                    <MenuItem Header="_Add" Click="MenuItem_BookAdd_Click"/>
                    <MenuItem Header="_View" Click="MenuItem_BookView_Click"/>
                </MenuItem>
                <MenuItem Header="_Location">
                    <MenuItem Header="_Add" Click="MenuItem_LocationAdd_Click"/>
                </MenuItem>
                <MenuItem Header="_Author">
                    <MenuItem Header="_Add" Click="MenuItem_AuthorAdd_Click"/>
                </MenuItem>
                <MenuItem Header="_Publisher">
                    <MenuItem Header="_Add" Click="MenuItem_PublisherAdd_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
